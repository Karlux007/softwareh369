export type Reino = 'Animal' | 'Vegetal' | 'Mineral';

// 1. Primeiro definimos a tabela completa
const tabelaReinos: { [key: string]: Reino } = {
  '01-01': 'Animal',
  '02-01': 'Vegetal',
  '03-01': 'Mineral',
  // ... e assim até 31-12
};

// 2. Depois colocamos as funções
export function calcularReinoPessoal(dia: number, mes: number): Reino | null {
  const diaFormatado = dia.toString().padStart(2, '0');
  const mesFormatado = mes.toString().padStart(2, '0');
  const chave = `${diaFormatado}-${mesFormatado}`;
  return tabelaReinos[chave] ?? null;
}

export function corDoReino(reino: Reino): string {
  switch (reino) {
    case 'Animal': return '#e53935';   // Vermelho
    case 'Vegetal': return '#43a047'; // Verde
    case 'Mineral': return '#1e88e5'; // Azul
    default: return '#000000';        // Preto (fallback)
  }
}
